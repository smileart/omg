# to use tmux itself prefix it like in this example: \tmux kill-session -t 0
alias tmux='tmux attach || tmux'

# OS X fix: "ls: illegal option -- -"
alias ls='\ls'

# Load Antigen
if [[ -f ~/antigen.zsh ]]; then
    source ~/antigen.zsh
else
    curl -L https://raw.github.com/zsh-users/antigen/master/antigen.zsh > ~/antigen.zsh
    source antigen.zsh
fi

export TERM='xterm-256color'

export LANG="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_MESSAGES="en_US.UTF-8"
export LC_PAPER="en_US.UTF-8"
export LC_NAME="en_US.UTF-8"
export LC_ADDRESS="en_US.UTF-8"
export LC_TELEPHONE="en_US.UTF-8"
export LC_MEASUREMENT="en_US.UTF-8"
export LC_IDENTIFICATION="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Custom bundles
antigen bundles <<EOBUNDLES
zsh-users/zsh-syntax-highlighting
zsh-users/zsh-history-substring-search
gnu-utils
gem
node
npm
osx
python
vagrant
brew
EOBUNDLES

# Tell antigen that you're done.
antigen apply

# bind UP and DOWN arrow keys
zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down

# bind UP and DOWN arrow keys
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

export COPYFILE_DISABLE=1

source ~/.smileart.zsh-theme

path=(
  $HOME/bin
  $path
)

for i in ~/.omg_aliases/.*.aliases ; do
  if [[ -f "$i" && "$i" != "~/.user.aliases" ]]; then
  source "$i"
  fi
done

if [ -f /usr/local/bin/z.sh ]; then
  source /usr/local/bin/z.sh
fi

if [ -f /usr/local/bin/k.sh ]; then
  source /usr/local/bin/k.sh
fi

if [ -d ~/.rbenv ]; then
  eval "$(rbenv init -)"
fi

if [ -f ~/.user.aliases ]; then
  source ~/.user.aliases
fi

export CLICOLOR=1
export LSCOLORS='dxfxcxdxbxegedabagacad'

# tmux autoload (if installed with OMG)
if [ -d ~/tmux/.tmux ]; then
  if [ "$TMUX" = "" ]; then tmux; fi
fi

eval $(thefuck --alias)
